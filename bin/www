#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require('../app');
const debug = require('debug')('express-socketio-redis-sample:server');
const http = require('http');
const { Server } = require('socket.io');
const { createAdapter } = require('@socket.io/redis-adapter');
const redis = require('../redis.js');
const RoomSessionStore = require('../room-session-store.js')(redis);

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

const server = http.createServer(app);
const pubClient = redis;
const subClient = redis.duplicate();
Promise.all([pubClient.connect(), subClient.connect()]);
const io = new Server(server, {
  adapter: createAdapter(pubClient, subClient),
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

io.on('connection', async (socket) => {
  const { roomId, userName } = socket.handshake.query;
  console.log(`Socket is connected`, socket.handshake.query);
  socket.data.userName = userName;
  socket.join(roomId);
  const session = await RoomSessionStore.find(roomId);
  socket.on('disconnect', () => {
    console.log('Socket is disconnected');
  });
  socket.on('message', ({ message }) => {
    console.log(`Receive ${userName}'s message "${message}"`);
    io.to(roomId).emit('message', { id: socket.id, userName, message });
  });
  socket.on('darkmode', ({ darkmode }) => {
    console.log(`Change dark mode "${darkmode}"`);
    io.to(roomId).emit('darkmode', { id: socket.id, roomId, userName, darkmode });
    session.setState({ darkmode });
  });
});
io.of('/').adapter.on('create-room', async (roomId) => {
  console.log(`Room ${roomId} was created`);
  const session = await RoomSessionStore.create(roomId);
  io.emit('create-room', { roomId });
});
io.of('/').adapter.on('delete-room', async (roomId) => {
  console.log(`Room ${roomId} was deleted`);
  await RoomSessionStore.delete(roomId);
  io.emit('delete-room', { roomId });
});
io.of('/').adapter.on('join-room', async (roomId, id) => {
  console.log(`Socket ${id} has joined room ${roomId}`);
  const session = await RoomSessionStore.find(roomId);
  const sockets = await io.fetchSockets();
  const users = sockets.reduce((categorized, socket) => {
    const user = {
      id: socket.id,
      name: socket.data.userName,
      rooms: socket.rooms,
    };
    const category = Array.from(socket.rooms).includes(roomId) ? 'inside' : 'outside';
    categorized[category].push(user)
    return categorized;
  }, { inside: [], outside: [] });
  const rooms = Array.from(io.of('/').adapter.rooms)
    .filter(([roomId]) => !users.outside.some((user) => user.id === roomId))
    .map(([roomId]) => roomId);
  const { darkmode } = session.state;
  // const { darkmode } = room.state
  io.to(roomId).emit('join-room', { roomId, id, darkmode, users: users.inside, rooms });
});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
